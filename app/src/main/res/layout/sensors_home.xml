<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84B192"    >

    <TextView
        android:id="@+id/sensors_home_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REPORTS"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card1"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@+id/sensors_home_heading"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/report_small_number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report no.:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/report_small_patient_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/report_small_temperature1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature:"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/report_small_sugar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sugar:"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/report_small_pressure1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pressure:"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/report_small_SpO21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SpO2:"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detailed_information"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"

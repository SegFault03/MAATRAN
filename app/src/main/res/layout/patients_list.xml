<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PatientsView">

    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="427dp"
        android:layout_height="119dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_to_dashboard_btn"
        android:layout_width="56dp"
        android:layout_height="82dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="backToDashboard"
        android:rotation="180"
        android:rotationY="4"
        app:layout_constraintBottom_toBottomOf="@+id/viewHeaderBackground"
        app:layout_constraintEnd_toEndOf="@+id/viewHeaderBackground"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewHeaderBackground"
        app:layout_constraintVertical_bias="0.622"
        app:srcCompat="@drawable/arrow_right" />

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/viewHeaderBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/join_family_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:onClick="joinFamily">

            <View
                android:id="@+id/join_family"
                android:layout_width="300dp"
                android:layout_height="91dp"
                android:background="@drawable/rectangle_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/rectangle_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/rent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/join_family"
                app:layout_constraintTop_toTopOf="@+id/join_family"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="69dp"
                android:text="JOIN FAMILY"
                android:textAlignment="center"
                android:textColor="#0A488A"
                android:textSize="20sp"
                app:fontFamily="@font/lexend_medium"
                app:layout_constraintEnd_toEndOf="@+id/join_family"
                app:layout_constraintTop_toTopOf="@+id/join_family" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal|top"
                android:text="Enter the Email Id of the family Admin and the unique family key."
                android:textColor="#000000"
                android:textSize="13sp"
                app:fontFamily="@font/lexend"
                app:layout_constraintEnd_toEndOf="@+id/join_family"
                app:layout_constraintTop_toTopOf="@+id/join_family" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/create_family_btn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:clickable="true"
            android:onClick="familyKeyHandler">

            <View
                android:id="@+id/create_family"
                android:layout_width="300dp"
                android:layout_height="91dp"
                android:background="@drawable/rectangle_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/rectangle_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:background="@drawable/key"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/create_family"
                app:layout_constraintTop_toTopOf="@+id/create_family"
                app:layout_constraintVertical_bias="0.485" />

            <TextView
                android:id="@+id/create_family_txt"
                android:layout_width="172dp"
                android:layout_height="29dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="46dp"
                android:text="CREATE FAMILY"
                android:textAlignment="center"
                android:textColor="#8A0A0A"
                android:textSize="20sp"
                app:fontFamily="@font/lexend_medium"
                app:layout_constraintEnd_toEndOf="@+id/create_family"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="13dp"
                android:gravity="center_horizontal|top"
                android:text="Get a unique family key and share it with family members."
                android:textColor="#000000"
                android:textSize="13sp"
                app:fontFamily="@font/lexend"
                app:layout_constraintEnd_toEndOf="@+id/create_family"
                app:layout_constraintTop_toTopOf="@+id/create_family" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="749dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_layout">


        <Spinner
            android:id="@+id/locality_spinner"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"
            android:spinnerMode="dropdown"
            android:textSize="40sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/patients"
        android:layout_width="235dp"
        android:layout_height="66dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/dm_sans_bold"
        android:gravity="center_vertical"
        android:text="PATIENTS"
        android:textColor="#373636"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewHeaderBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/back_to_dashboard_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEAF8">

    <Button
        android:id="@+id/cancel"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#0B6A77"
        android:text="CANCEL"
        android:textSize="25sp"
        android:onClick="cancelChanges"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/edit_img"
        android:layout_width="127dp"
        android:layout_height="107dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_details"
        app:layout_constraintVertical_bias="0.025" />

    <EditText
        android:id="@+id/emergency_no"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:background="#99B1B5"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/emergency"
        app:layout_constraintTop_toBottomOf="@id/patient_address"
        app:layout_constraintVertical_bias="0.109" />

    <TextView
        android:id="@+id/emergency"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#88E5F1"
        android:paddingLeft="10dp"
        android:text="EMERGENCY :"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintVertical_bias="0.111" />

    <TextView
        android:id="@+id/address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#88E5F1"
        android:paddingLeft="10dp"
        android:text="ADDRESS :"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#88E5F1"
        android:paddingLeft="10dp"
        android:text="GENDER :"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobile"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/patient_address"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:background="#99B1B5"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@id/patient_gender"
        app:layout_constraintVertical_bias="0.086" />

    <EditText
        android:id="@+id/patient_gender"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:background="#99B1B5"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/gender"
        app:layout_constraintTop_toBottomOf="@id/patient_mobile"
        app:layout_constraintVertical_bias="0.059" />

    <EditText
        android:id="@+id/patient_mobile"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:background="#99B1B5"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mobile"
        app:layout_constraintTop_toBottomOf="@id/patient_age"
        app:layout_constraintVertical_bias="0.059" />

    <EditText
        android:id="@+id/patient_age"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:background="#99B1B5"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/age"
        app:layout_constraintTop_toBottomOf="@id/patient_name"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/age"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#88E5F1"
        android:paddingLeft="10dp"
        android:text="AGE :"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintVertical_bias="0.047" />


    <TextView
        android:id="@+id/mobile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#88E5F1"
        android:paddingLeft="10dp"
        android:text="MOBILE :"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/age"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/edit_details"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rectangle_13"
        android:gravity="center"
        android:text="EDIT DETAILS"
        android:textAlignment="center"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#88E5F1"
        android:paddingLeft="10dp"
        android:text="NAME :"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_img"
        app:layout_constraintVertical_bias="0.027" />

    <EditText
        android:id="@+id/patient_name"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:background="#99B1B5"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/edit_img"
        app:layout_constraintVertical_bias="0.027" />

    <Button
        android:id="@+id/save"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:backgroundTint="#20909F"
        android:onClick="saveDetails"
        android:text="SAVE"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emergency"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>